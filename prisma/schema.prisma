generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dentist {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?
  password String
  client   Client[]

  @@map("dentist")
}

model Client {
  id          String   @id @default(uuid())
  name        String
  treatment   String
  date        DateTime @default(now())
  value       Decimal
  numberPlots Int
  dentistId   String
  dentist     Dentist  @relation(fields: [dentistId], references: [id])

  @@map("client")
}
