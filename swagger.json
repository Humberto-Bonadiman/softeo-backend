{
  "openapi": "3.0.1",
  "info": {
    "title": "Dentist",
    "description": "Documentation from dentist api",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/dentist": {
      "post": {
        "tags": ["Dentist"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "your_email_here@email.com",
                  "name": "Your Email Here",
                  "password": "your-password-here"
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Create a new dentist"
          }
        }
      },
      "get": {
        "tags": ["Dentist"],
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "200": {
            "description": "List all dentists"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Dentist"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "your_email_here@email.com",
                  "password": "your-password-here"
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Login with a existent dentist"
          }
        }
      }
    },
    "/client": {
      "post": {
        "tags": ["Client"],
        "parameters": [{
          "name": "auth",
          "in": "header",
          "schema": {
            "type": "string"
          },
          "description": "an authorization header",
          "required": true
        }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "treatment": {
                    "type": "string"
                  },
                  "value": {
                    "type": "number"
                  },
                  "numberPlots": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "201": {
            "description": "Create a new client"
          }
        }
      },
      "get": {
        "tags": ["Client"],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Get all clients"
          }
        }
      }
    },
    "/client/{id}": {
      "get": {
        "tags": ["Client"],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Get a client by Id"
          }
        }
      },
      "put": {
        "tags": ["Client"],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "treatment": {
                    "type": "string"
                  },
                  "value": {
                    "type": "number"
                  },
                  "date": {
                    "type": "string"
                  },
                  "numberPlots": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Update a client by Id"
          }
        }
      },
      "delete": {
        "tags": ["Client"],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Delete a client by Id"
          }
        }
      }
    }
  }
}